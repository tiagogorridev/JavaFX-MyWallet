<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="br.pucpr.projeto.Carteira.CarteiraController" spacing="15" alignment="CENTER">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Editar Carteira" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Label text="Nome da Carteira:" style="-fx-font-weight: bold;"/>
    <TextField fx:id="inputNomeCarteira" promptText="Ex: Carteira Conservadora"/>

    <Label text="Descrição da Carteira:" style="-fx-font-weight: bold;"/>
    <TextField fx:id="inputDescricaoCarteira" promptText="Ex: Carteira focada em renda fixa"/>

    <Label text="Quantidade Aportada:" style="-fx-font-weight: bold;"/>
    <TextField fx:id="inputQuantidadeAportada" promptText="Ex: 1000.00"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Salvar" onAction="#salvarAlteracoes" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="120"/>
        <Button text="Cancelar" onAction="#voltarParaCarteiras" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="120"/>
    </HBox>
</VBox>