<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="br.pucpr.projeto.Noticia.NoticiaController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <ListView fx:id="listaNoticias" prefHeight="200.0" prefWidth="400.0"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Criar" onAction="#criarNoticia"/>
        <Button text="Editar" onAction="#editarNoticia"/>
        <Button text="Deletar" onAction="#apagarNoticia"/>
    </HBox>
</VBox>
