<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="br.pucpr.projeto.Carteira.MinhasCarteirasController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Minhas Carteiras" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <ListView fx:id="lista" prefHeight="200.0" prefWidth="400.0"/>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Criar" onAction="#criarCarteira"/>
        <Button text="Editar" onAction="#editarCarteira"/>
        <Button text="Deletar" onAction="#apagarCarteira"/>
    </HBox>
</VBox>